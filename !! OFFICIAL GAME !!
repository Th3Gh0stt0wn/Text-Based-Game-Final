}

void Getbattle() {
	int MonsterType = Getgone();
	int MonsterHealth = 0;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	if (MonsterType == 19) {
		MonsterHealth = 150;
	}
	if (MonsterType == 20) {
		MonsterHealth = 1500;
	}
	if (MonsterType == 21) {
		MonsterHealth = 130;
	}
	if (MonsterType == 22) {
		MonsterHealth = 230;
	}
	if (MonsterType == 23) {
		MonsterHealth = 420;
	}
	if (MonsterType == 19) {
		MonsterDamage = rand() % 66 + 1;
	}
	if (MonsterType == 20) {
		MonsterDamage = rand() % 98 + 1;
	}
	if (MonsterType == 21) {
		MonsterDamage = rand() % 66 + 1;
	}
	if (MonsterType == 22) {
		MonsterDamage = rand() % 98 + 1;
	}
	if (MonsterType == 23) {
		MonsterDamage = rand() % 61 + 1;
	}
	while (MonsterHealth > 0 && PlayerHealth > 0) {

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}

		//player attacks the monster!
		PlayerDamage = rand() % 56; //calculate player damage

		if (inventory[12] == "Katana") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[27] == "tenisball") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[10] == "knife") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else { //they don"t have the sword
			cout << "You fight back and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		cout << "Your health is now: " << PlayerHealth << " The creature's health is now: " << MonsterHealth << endl;
	}

	if (MonsterHealth <= 0) {
		cout << "You won the battle.." << endl;
	}
	else if (PlayerHealth <= 0) {
		cout << "You died..." << endl;
		gulag();
	}
}


void finalbattleG() {
	int MonsterType = finalG();
	int MonsterHealth = 3000;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	while (MonsterHealth > 0 && PlayerHealth > 0) {
		MonsterDamage = rand() % 120 + 1;

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage -= 20;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[19] == "GoldArmor") { //check if you have
			MonsterDamage /= 10;
			cout << "The creature slashes at you but the golden armor protects you from taking the full force of the hit" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		//player attacks the monster!
		PlayerDamage = rand() % 100; //calculate player damage

		if (inventory[18] == "axe") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[20] == "Lævateinn") { //check if you have sword
			PlayerDamage *= 4; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else { //they don"t have the sword
			cout << "You fight back and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}

		cout << "Your health is now: " << PlayerHealth << " The creature's health is now: " << MonsterHealth << endl;
	}

	if (MonsterHealth <= 0) {//game end
		cout << "You won the battle.." << endl;
		cout << "Good job adventurer.. stay true" << endl;
		cout << "A dragon come up behind you congratulating you as the room around you becomes brighter and full of life" << endl;
		hasWon = true;
	}
	else if (PlayerHealth <= 0) {
		cout << "You died..." << endl;
		gulag();
	}
	cout << "Game over..." << endl;
}

void finalbattleE() { 
	int MonsterType = finalE();
	int MonsterHealth = 0;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	if (MonsterType == 13) {
		MonsterHealth = 1000;
	}
	if (MonsterType == 13) {
		MonsterDamage = rand() % 90 + 1;
	}
	while (MonsterHealth > 0 && PlayerHealth > 0) {

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[30] == "dragonscalearmor") { //check if you have
			MonsterDamage /= 8;
			cout << "The creature lunges at you its long claws scraping your armor but your some how still alive" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}


		//player attacks the monster!
		PlayerDamage = rand() %150; //calculate player damage

		if (inventory[12] == "Katana") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[10] == "knife") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[18] == "Axe") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[27] == "tenisball") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[29] == "hammer") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else { //they don"t have the sword
			cout << "You fight back and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}

		cout << "Your health is now: " << PlayerHealth << " The creature's health is now: " << MonsterHealth << endl;
	}

	if (MonsterHealth <= 0) { // game end
		cout << "You won the battle.." << endl;
		cout << "Now you may continue taking everything over till it is in your image." << endl;
		cout << "As you take a breath you look around as the room dies around you a soft purple mist filling the room" << endl;
		hasWon = true;
	}
	else if (PlayerHealth <= 0) {
		cout << "You died..." << endl;
		gulag();
	}
	cout << "Game over..." << endl;
}

void gulag() {
	int MonsterType = gulagMon();
	int MonsterHealth = 700;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	while (MonsterHealth > 0 && PlayerHealth > 0) {

		MonsterDamage = rand() % 70 + 1;

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[19] == "GoldArmor") { //check if you have
			MonsterDamage /= 10;
			cout << "The creature slashes at you but the golden armor protects you from taking the full force of the hit" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[30] == "dragonscalearmor") { //check if you have
			MonsterDamage /= 8;
			cout << "The creature lunges at you its long claws scraping your armor but your some how still alive" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}

		//player attacks the monster!
		PlayerDamage = rand() % 150; //calculate player damage

		if (inventory[12] == "Katana") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[10] == "knife") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[27] == "tenisball") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[20] == "Lævateinn") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[18] == "Axe") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[29] == "hammer") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else { //they don"t have the sword
			cout << "You fight back and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}

		cout << "Your health is now: " << PlayerHealth << " The creature's health is now : " << MonsterHealth << endl;
	}

	if (MonsterHealth <= 0) {
		cout << "You won the battle.." << endl;
		cout << "you won.. do you wish to go back..?" << endl;

	}
	else if (PlayerHealth <= 0) { // game end 
		cout << "You died...again" << endl;
		cout << "Game Over" << endl;
		PlayerHealth -= 1000; //this will kill the game loop
	}
	system("pause");
}

void Dropper() {
	cout << "-----------------------------DROPPER-------------------------------------" << endl;
	int num = rand() % 100;
	bool used = false;
	if (num < 25 && used == false) {
		cout << "You find yourself getting stronger" << endl;
		PlayerHealth += 50;
		used = true;
		cout << "---------------------------------------------------------------------" << endl;
	}
	else if (num < 40) {
		cout << "You rest up and feel better than normal.. thats because you find 50 dubloons in a pouch!" << endl;
		dubloons += 50;

		cout << "---------------------------------------------------------------------" << endl;
	}
	else if (num < 50) {
		cout << "You get a bag full of dabloons" << endl;
		dubloons += 70;
		cout << "---------------------------------------------------------------------" << endl;
	}
	if (num < 90) {
		cout << "You gain a handfull of dubloons" << endl;
		dubloons += 100;
		cout << "---------------------------------------------------------------------" << endl;
	}
}

void itemdropper() {
	cout << "-----------------------ITEM-DROPPER----------------------------------" << endl;
	int num = rand() % 100;
	if (num < 20) {
		cout << "You find a marble..." << endl;
		inventory[17] = "marble";
		cout << "---------------------------------------------------------------------" << endl;
	}
	else if (num < 40) {
		cout << "You found old bones..." << endl;
		inventory[2] = "bone";
		cout << "---------------------------------------------------------------------" << endl;
	}
	else if (num < 50) {
		cout << "You gain a pile of rocks..." << endl;
		inventory[16] = "rocks";
		cout << "---------------------------------------------------------------------" << endl;
	}
	else if (num < 60) {
		cout << "A chess peice" << endl;
		inventory[3] = "chess";
		cout << "---------------------------------------------------------------------" << endl;
	}
	else {
		cout << "You find a feather from a chicken" << endl;
		inventory[4] = "feather";
		cout << "---------------------------------------------------------------------" << endl;
	}
}

void Petinteraction() {
	int num = rand() % 100;
	if (num < 20) {
		cout << "You laugh and pet the Wyvern and then continue walking" << endl;
		cout << "The Wyvern hisses at you as he trys to walk in front of you " << endl;
		affinity += 10;
	}
	else if (num < 50) {
		cout << "With a soft hum you pet the Wyvern and continue walking" << endl;
		cout << "The Wyvern's claws clink on the ground as he follows you" << endl;
		affinity += 10;
	}
	else if (num < 75) {
		cout << "You pat his head and being walker at a pace faster than normal" << endl;
		cout << "The Wyvern gently flaps his wings trying to catch up with you" << endl;
		affinity += 10;
	}
	else if (num < 90) {
		cout << "You pet him and laugh as" << endl;
		cout << "The Wyvern does a little dance" << endl;
		cout << "After a quick dance sesh you continue walking" << endl;
		affinity += 10;
	}
	else
		cout << "The Wyvern follows you nothing intresting happening" << endl;
}

void Shop() {
	cout << "------------------------------SHOP--------------------------------------" << endl;
	int input = 1;
	while (input != 0) {
		cout << "You currently have " << dubloons << " dubloons" << endl;
		cout << "The current items I have for sale are:" << endl;
		cout << "1) Battle Axe: 150 " << endl;
		cout << "2) Golden Armor: 360" << endl;
		cout << "3) Lævateinn: 220" << endl;
		cout << "Press 0 to quit" << endl;
		cout << "---------------------------------------------------------------------" << endl;
		cout << "Please tell me what you would like to buy:" << endl;
		cin >> input;
		if (input == 1) {
			if (dubloons >= 150) {
				cout << "A battle axe! wonderful choice!" << endl;
				inventory[18] = "Axe";
				dubloons -= 150;
			}
			else
				cout << "You dont have enough dubloons to pay for that item!" << endl;
		}
		if (input == 2) {
			if (dubloons >= 360) {
				cout << "The golden armor? I wish you luck for your final battle!" << endl;
				inventory[19] = "GoldArmor";
				dubloons -= 360;
			}
			else
				cout << "you dont have the money for that!" << endl;
		}
		if (input == 3) {
			if (dubloons >= 220) {
				cout << "Loki's weapon? an intresting choice for an intresting person" << endl;
				inventory[20] = "Lævateinn";
				dubloons -= 220;
			}
		}
	}
}

