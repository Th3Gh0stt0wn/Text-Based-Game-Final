void shop() {
	cout << "-----------------------SHOP----------------------------------" << endl;
	int input = 1;
	while (input != 0) {
		cout << "Welcome to the Shop!" << endl;
		cout << "You currently have " << dubloons << " dubloons" << endl;
		cout << "The current items for sale:" << endl;
		cout << "1) Healing potion: 30" << endl;
		cout << "2) Extra power up: 20" << endl;
		cout << "3) Luck potion: 10" << endl;
		cout << "4) Armor: 120" << endl;
		cout << "5) Strength potion: 40" << endl;
		cout << "6) Small knife: 20" << endl;
		cout << "7) Shield: 50" << endl;
		cout << "8) Katana: 100" << endl;
		cout << "Press 0 to quit" << endl;
		cout << "---------------------------------------------------------------------" << endl;
		cout << "Please tell me what you would like to buy:" << endl;
		cin >> input;
		if (input == 1) {
			if (dubloons >= 30) {
				cout << "You bought a vile of a healing potion" << endl;
				inventory[5] = "Hpotion";
				PlayerHealth += 15;
				dubloons -= 30;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		if (input == 2) {
			if (dubloons >= 60) {
				cout << "You have bought a power gain" << endl;
				inventory[6] = "Power";
				PlayerHealth += 10;
				dubloons -= 20;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		if (input == 3) {
			if (dubloons >= 10) {
				cout << "Lets Get Luckyyyyyyyyyyyyyyyy" << endl;
				inventory[7] = "Luck";
				luck += 20;
				dubloons -= 10;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		if (input == 4) {
			if (dubloons >= 120) {
				cout << "Get suited up" << endl;
				inventory[8] = "Armor";
				dubloons -= 120;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		if (input == 5) {
			if (dubloons >= 40) {
				cout << "Strength pot" << endl;
				inventory[9] = "Spotion";
				PlayerHealth += 30;
				dubloons -= 40;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		if (input == 6) {
			if (dubloons >= 20) {
				cout << "You have a small weapon.." << endl;
				inventory[10] = "Knife";
				dubloons -= 20;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		if (input == 7) {
			if (dubloons >= 20) {
				cout << "You want to protect yourself.." << endl;
				inventory[11] = "Shield";
				dubloons -= 20;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}

		if (input == 8) {
			if (dubloons >= 100) {
				cout << "You have a weapon.." << endl;
				inventory[12] = "Katana";
				dubloons -= 100;
			}
			else
				cout << "You dont have enough dubloons to pay for that!" << endl;
		}
		else
			cout << "You are not playing the game, please exit out!";

		
	}//end of game loop
}//end of main
