void BattleSystem() {
	int MonsterType = MonGen();
	int MonsterHealth = 0;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	if (MonsterType == 1) {
		MonsterHealth = 69;
	}
	if (MonsterType == 2) {
		MonsterHealth = 80;
	}
	if (MonsterType == 3) {
		MonsterHealth = 50;
	}
	if (MonsterType == 9) {
		MonsterHealth = 75;
	}
	if (MonsterType == 10) {
		MonsterHealth = 50;
	}
	if (MonsterType == 1) {
		MonsterDamage = rand() % 26 + 1;
	}
	if (MonsterType == 2) {
		MonsterDamage = rand() % 38 + 1;
	}
	if (MonsterType == 3) {
		MonsterDamage = rand() % 16 + 1;
	}
	if (MonsterType == 9) {
		MonsterDamage = rand() % 38 + 1;
	}
	if (MonsterType == 10) {
		MonsterDamage = rand() % 21 + 1;
	}
	while (MonsterHealth > 0 && PlayerHealth > 0) {

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}

		//player attacks the monster!
		PlayerDamage = rand() % 56; //calculate player damage

		if (inventory[12] == "Katana") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[10] == "knife") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else { //they don"t have the sword
			cout << "You fight back and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}

		cout << "Your health is now: " << PlayerHealth << " The creature's health is now : " << MonsterHealth << endl;
	}

	if (MonsterHealth <= 0) {
		cout << "You won the battle.." << endl;
	}
	else if (PlayerHealth <= 0) {
		cout << "You died..." << endl;
		gulag();
	}
}

void Getridbattle() {
	int MonsterType = Getrid();
	int MonsterHealth = 0;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	if (MonsterType == 14) {
		MonsterHealth = 69;
	}
	if (MonsterType == 15) {
		MonsterHealth = 80;
	}
	if (MonsterType == 16) {
		MonsterHealth = 50;
	}
	if (MonsterType == 17) {
		MonsterHealth = 75;
	}
	if (MonsterType == 18) {
		MonsterHealth = 50;
	}
	if (MonsterType == 14) {
		MonsterDamage = rand() % 26 + 1;
	}
	if (MonsterType == 15) {
		MonsterDamage = rand() % 38 + 1;
	}
	if (MonsterType == 16) {
		MonsterDamage = rand() % 16 + 1;
	}
	if (MonsterType == 17) {
		MonsterDamage = rand() % 38 + 1;
	}
	if (MonsterType == 18) {
		MonsterDamage = rand() % 21 + 1;
	}
	while (MonsterHealth > 0 && PlayerHealth > 0) {

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}

		//player attacks the monster!
		PlayerDamage = rand() % 56; //calculate player damage

		if (inventory[12] == "Katana") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[27] == "tenisball") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else if (inventory[10] == "knife") { //check if you have sword
			PlayerDamage *= 2; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}
		else { //they don"t have the sword
			cout << "You fight back and the creature loses " << PlayerDamage << " HP" << endl;
			MonsterHealth -= PlayerDamage;
		}

		cout << "Your health is now: " << PlayerHealth << " The creature's health is now: " << MonsterHealth << endl;
	}

	if (MonsterHealth <= 0) {
		cout << "You won the battle.." << endl;
	}
	else if (PlayerHealth <= 0) {
		cout << "You died..." << endl;
		gulag();
	}
}

void StrongBattle() {
	int MonsterType = StrongGen();
	int MonsterHealth = 0;
	int MonsterDamage = 0;
	int PlayerDamage = 0;

	if (MonsterType == 4) {
		MonsterHealth = 150;
	}
	if (MonsterType == 5) {
		MonsterHealth = 1500;
	}
	if (MonsterType == 6) {
		MonsterHealth = 130;
	}
	if (MonsterType == 7) {
		MonsterHealth = 230;
	}
	if (MonsterType == 8) {
		MonsterHealth = 420;
	}
	if (MonsterType == 4) {
		MonsterDamage = rand() % 66 + 1;
	}
	if (MonsterType == 5) {
		MonsterDamage = rand() % 98 + 1;
	}
	if (MonsterType == 6) {
		MonsterDamage = rand() % 66 + 1;
	}
	if (MonsterType == 7) {
		MonsterDamage = rand() % 98 + 1;
	}
	if (MonsterType == 8) {
		MonsterDamage = rand() % 61 + 1;
	}
	while (MonsterHealth > 0 && PlayerHealth > 0) {

		//monster attacks player!
		if (inventory[11] == "Sheild") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else if (inventory[8] == "Armor") {
			MonsterDamage /= 2;
			cout << "The creature attacks you but you blocked and take less damage and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}
		else {
			cout << "The creature attacks you and you lose " << MonsterDamage << " HP" << endl;
			PlayerHealth -= MonsterDamage;
		}

		//player attacks the monster!
		PlayerDamage = rand() % 56; //calculate player damage

		if (inventory[12] == "Katana") { //check if you have sword
			PlayerDamage *= 3; //double damage if they have the sword
			cout << "You fight back with the sword and the creature loses " << PlayerDamage << " HP" << endl;
