			break;
		case 38:
			system("color 07");
			cout << "Before you continue going deeper in the room do you want to (p)et the Wyvern.. ? This is the last time you'll every get to pet him..." << endl;
			cout << "The life grows around you a soft green mist slowly filling the room... if you want to continue on please go (s)outh.. if you want to head back go (w)est" << endl;
			cin >> input;
			if (input == "s")
				room = 39;
			else if (input == "w")
				room = 37;
			else if (input == "p")
				Petinteraction();
			break;
		case 39://bad end
			system("color 07");
			cout << "There is a shopkeeper looking at you do you (g)o to him?" << endl;
			cout << "Are you (r)eady for the final battle? Have everything you need? or you need to head back (n)orth" << endl;
			cin >> input;
			if (input == "g")
				Shep();
			else if (input == "r")
				room = 41;
			else if (input == "n")
				room = 38;
			break;
		case 40://Good Vs. Evil
			cout << "You walk into the room before it quickly transforms into a smaller space still filled with the smoke..." << endl;
			finalbattleG();
			break;
		case 41: //Evil Vs. Good
			finalbattleE();
			break;
		case 42://gulag
			gulag();
			break;
		case 43://g explore
			cout << "You walk into a room you find behind a desk.. theres a monster standing there do you (a) fight it? or (b) to go back" << endl;
			cin >> input;
			if (input == "a")
				MonGen();
			else if (input == "b")
				room = 18;
			break;
		case 44://g explore
			cout << "You explore the room and see a chest press (o) to open the chest.. if you want to head back press (b).." << endl;
			cin >> input;
			if (input == "o")
				itemdropper();
			else if (input == "b")
				room = 16;
			break;
		case 45://e explore
			cout << "You walk into a room you find a small door. You crawl through and as you emerge in the room and stand up.. theres a monster standing there do you (a) fight it? or (b) to go back " << endl;
			cin >> input;
			if (input == "a")
				Getridbattle();
			else if (input == "b")
				room = 35;
			break;
		case 46://e explore
			cout << "you open a door hidden behind a skeleton.. you walk in and inside the room there is a chest.. press (o) to open.. and press (b) to go back" << endl;
			cin >> input;
			if (input == "o")
				itemdropper();
			else if (input == "b")
				room = 35;
			break;
		}// END OF SWITCH
	}// END OF GAME LOOP
}// END OF MAIN

// func deff
int MonGen() {
	int num = rand() % 100; //0-99
	if (num < 20) {
		PlaySound(TEXT("oni.wav"), NULL, SND_FILENAME | SND_ASYNC);
		cout << "A Oni spawned" << endl;
		cout << "It jumps at you teeth bared" << endl;
		system("color 04");
		return 1;
	}
	else if (num < 50) {
		PlaySound(TEXT("rock.wav"), NULL, SND_FILENAME | SND_ASYNC);
		cout << "A Golem spawned" << endl;
		cout << "The ground rumbles underneath you as its body forms" << endl;
		system("color 80");
		return 2;
	}
	else if (num < 70) {
		PlaySound(TEXT("oger.wav"), NULL, SND_FILENAME | SND_ASYNC);
		cout << "A Oger appears!" << endl;
		cout << "It slams its club down into the ground causing the floor to shake" << endl;
		system("color A0");
		return 3;
	}
	else if (num < 85) {
		PlaySound(TEXT("goblin.wav"), NULL, SND_FILENAME | SND_ASYNC);
		cout << "A Goblin lunges at you" << endl;
		cout << "It's eyes shine with mischief" << endl;
		system("color 0A");
		return 9;
	}
	else if (num < 98) {
		PlaySound(TEXT("ghoul.wav"), NULL, SND_FILENAME | SND_ASYNC);
		cout << "A Ghoul appears!" << endl;
		cout << "It growls as it walk to you its claws scraping on the wall" << endl;
		system("color F0");
		return 10;
	}
	else
		cout << "nothing spawned" << endl;
}

